<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>


<body>

    <div>

        <canvas id="myChart"></canvas>

    </div>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        
        <% if (dropdown == '1') {%>
        var data =<%= JSON.stringify(marks) %>
        var label = [];
        <% for (var i = 0; i < subject_name.length; i++) { %>

                label.push("<%= subject_name[i] %>")

                <% } %>

                <%} else if (dropdown == '2') {%>
        var data =<%= JSON.stringify(score) %>
        var label = [];
        <% for (var i = 0; i < team_name.length; i++) { %>

                label.push("<%= team_name[i] %>")

                <% } %>
        <%}%>
        var myChart = new Chart(ctx, {
                    type: "<%= Type%>",
                    data: {
                        labels: label,
                        datasets: [{
                            label: "<%= Heading %>",
                            data: data,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
    </script>

</body>

</html>